@model EBookStore.Models.Book
@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
	<dl class="row">
		<h1> Delete Book</h1>
		<h3>Are you sure you want to delete this?</h3>
		<hr />
		<dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Title) </dt>
		<dd class="col-sm-4"> @Html.DisplayFor(model => model.Title) </dd>
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Author):</dt>
		<dd class="col-sm-4">@($"{Model.Author.FirstName} {Model.Author.LastName}")</dd>
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Category):</dt>
		<dd class="col-sm-4">@Html.DisplayFor(model => model.Category.Name)</dd>
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Publisher):</dt>
		<dd class="col-sm-4">@Html.DisplayFor(model => model.Publisher.Name)</dd>
		<dt class="col-sm-2 my-3 ">@Html.DisplayNameFor(model => model.ISBN):</dt>
		<dd class="col-sm-4 my-3 fw-bold">@Html.DisplayFor(model => model.ISBN)</dd>
		<dt class="col-sm-2 my-3 ">@Html.DisplayNameFor(model => model.Price):</dt>
		<dd class="col-sm-4 my-3 fw-bold">@Html.DisplayFor(model => model.Price)</dd>
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description):</dt>
		<dd class="col-sm-4">@Html.DisplayFor(model => model.Description)</dd>
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Stock):</dt>
		<dd class="col-sm-4">@Html.DisplayFor(model => model.Stock)</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CreatedDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CreatedDate)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.UpdatedDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.UpdatedDate)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Index" class="btn btn-info">Back to List</a>
	</form>
</div>
